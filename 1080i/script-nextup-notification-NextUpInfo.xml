<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3012</defaultcontrol>
    <zorder>1</zorder>
    <controls>
        <!--3000 - Title
        3001 - Plot
        3002 - Season/Episode
        3003 - Rating
        3004 - First Aired
        3005 - TV Show Fanart
        3006 - TV Show ClearArt
        3007 - TV Show Title
        3008 - Episode Thumb
        3009 - TV Show Poster
        3010 - TV Show Landscape
        3011 - Video Resolution
        3012 - Watch Now Button
        3013 - Cancel Button
        3015 - Season Number
        3016 - Episode Number
        3018 - Play Count-->
        <control type="label" id="3000">
            <include>HiddenObject</include>
        </control>
        <control type="textbox" id="3001">
            <include>HiddenObject</include>
        </control>
        <control type="label" id="3002">
            <include>HiddenObject</include>
        </control>
        <control type="label" id="3003">
            <include>HiddenObject</include>
        </control>
        <control type="label" id="3004">
            <include>HiddenObject</include>
        </control>
        <control type="image" id="3005">
            <include>HiddenObject</include>
        </control>
        <control type="image" id="3006">
            <include>HiddenObject</include>
        </control>
        <control type="label" id="3007">
            <include>HiddenObject</include>
        </control>
        <control type="image" id="3008">
            <include>HiddenObject</include>
        </control>
        <control type="image" id="3009">
            <include>HiddenObject</include>
        </control>
        <control type="image" id="3010">
            <include>HiddenObject</include>
        </control>
        <control type="label" id="3011">
            <include>HiddenObject</include>
        </control>
        <control type="label" id="3015">
            <include>HiddenObject</include>
        </control>
        <control type="label" id="3016">
            <include>HiddenObject</include>
        </control>
        <control type="label" id="3018">
            <include>HiddenObject</include>
        </control>

        <!-- Hidden Buttons section -->
        <control type="grouplist">
            <include>HiddenObject</include>
            <!-- Watch now -->
            <control type="button" id="3012">
                <onfocus condition="Control.IsVisible(500397)">SetFocus(3097)</onfocus>
                <onback>SendClick(3013)</onback>
            </control>
            <!-- Cancel - onback -->
            <control type="button" id="3013">
                <visible allowhidden="true">false</visible>
            </control>
        </control>

        <!-- OSD -->

        <!-- Buttons Notification -->
        <control type="group" id="500397">
            <visible>Skin.HasSetting(NextUpNotificationSlim)</visible>
            <include>animation_fade_visible_hidden</include>
            <control type="grouplist">
                <bottom>60</bottom>
                <right>40</right>
                <orientation>horizontal</orientation>
                <itemgap>25</itemgap>
                <width>650</width>
                <height>65</height>
                <control type="button" id="3096">
                    <width>225</width>
                    <height>65</height>
                    <aligny>center</aligny>
                    <align>center</align>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(NetflixPrimaryTextColor)]</textcolor>
                    <focusedcolor>$INFO[Skin.String(ViewDetailsTextColor)]</focusedcolor>
                    <label>222</label>
                    <texturefocus colordiffuse="$INFO[Skin.String(ViewDetailsBorderFocusColor)]">netflix/slimframeFO.png</texturefocus>
                    <texturenofocus colordiffuse="$INFO[Skin.String(ViewDetailsBorderFocusColor)]">netflix/slimframeNF.png</texturenofocus>
                    <onclick>SendClick(3013)</onclick>
                </control>
                <control type="radiobutton" id="3097">
                    <!-- localize -->
                    <width>385</width>
                    <height>65</height>
                    <aligny>center</aligny>
                    <align>left</align>
                    <textoffsetx>60</textoffsetx>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(NetflixPrimaryTextColor)]</textcolor>
                    <focusedcolor>$INFO[Skin.String(ViewDetailsTextColor)]</focusedcolor>
                    <label>Next Episode$INFO[Player.TimeRemaining(ss), in ,s]</label>
                    <texturefocus colordiffuse="$INFO[Skin.String(ViewDetailsBorderFocusColor)]">netflix/slimframeFO.png</texturefocus>
                    <texturenofocus colordiffuse="$INFO[Skin.String(ViewDetailsBorderFocusColor)]">netflix/slimframeNF.png</texturenofocus>
                    <textureradioonfocus colordiffuse="$INFO[Skin.String(ViewDetailsTextColor)]">play.png</textureradioonfocus>
                    <textureradioofffocus colordiffuse="$INFO[Skin.String(ViewDetailsTextColor)]">play.png</textureradioofffocus>
                    <textureradioonnofocus colordiffuse="$INFO[Skin.String(NetflixPrimaryTextColor)]">play.png</textureradioonnofocus>
                    <textureradiooffnofocus colordiffuse="$INFO[Skin.String(NetflixPrimaryTextColor)]">play.png</textureradiooffnofocus>
                    <radioposx>25</radioposx>
                    <radiowidth>23</radiowidth>
                    <radioheight>23</radioheight>
                    <onclick>SendClick(3012)</onclick>
                </control>
            </control>
        </control>

            <!-- Full Info Notification -->
            <control type="group">
                <visible>!Skin.HasSetting(NextUpNotificationSlim)</visible>
                <!-- gradient overlay, cornered would be better -->
                <control type="image">
                    <bottom>0</bottom>
                    <width>100%</width>
                    <height>820</height>
                    <texture border="5">diffuse/gradient.png</texture>
                    <colordiffuse>$INFO[Skin.String(OSDPanelColor)]</colordiffuse>
                </control>
                <!-- NextUp Info -->
                <control type="grouplist">
                    <bottom>20</bottom>
                    <right>50</right>
                    <orientation>vertical</orientation>
                    <height>615</height>
                    <width>750</width>
                    <!-- TVshow Title -->
                    <control type="label">
                        <width>500</width>
                        <height>40</height>
                        <font>Bold36</font>
                        <textcolor>white</textcolor>
                        <align>left</align>
                        <aligny>center</aligny>
                        <label>$INFO[Control.GetLabel(3007)]</label>
                    </control>
                    <!-- Starting in ... (locoalize) -->
                    <control type="label">
                        <width>auto</width>
                        <height>33</height>
                        <font>Bold32</font>
                        <aligny>center</aligny>
                        <textcolor>white</textcolor>
                        <label>[LIGHT]$INFO[Player.TimeRemaining(ss),Starting in , seconds...][/LIGHT]</label>
                    </control>
                    <!-- Thumb/Fanart -->
                    <control type="group">
                        <visible>!String.IsEmpty(Control.GetLabel(3005)) | !String.IsEmpty(Control.GetLabel(3008))</visible>
                        <width>550</width>
                        <height>315</height>
                        <control type="image">
                            <width>550</width>
                            <height>315</height>
                            <bordersize>6</bordersize>
                            <bordertexture>colors/color_white.png</bordertexture>
                            <texture>$VAR[NextUpThumb]</texture>
                            <aspectratio scalediffuse="false" align="center" aligny="center">scale</aspectratio>
                        </control>
                        <!-- bottom gradient -->
                        <control type="image">
                            <bottom>7</bottom>
                            <left>7</left>
                            <width>536</width>
                            <align>center</align>
                            <height>55</height>
                            <texture border="8">diffuse/gradient.png</texture>
                            <colordiffuse>$INFO[Skin.String(OSDPanelColor)]</colordiffuse>
                        </control>
                        <!-- Sxx: Exx -->
                        <control type="label">
                            <bottom>25</bottom>
                            <left>25</left>
                            <height>20</height>
                            <width>auto</width>
                            <textcolor>white</textcolor>
                            <font>Bold26</font>
                            <label>$INFO[Control.GetLabel(3015),S,: ]$INFO[Control.GetLabel(3016),E,]</label>
                        </control>
                    </control>
                    <!-- Episode Name -->
                    <control type="label">
                        <width>auto</width>
                        <height>30</height>
                        <aligny>center</aligny>
                        <font>Bold28</font>
                        <textcolor>white</textcolor>
                        <label>$INFO[Control.GetLabel(3000)]</label>
                        <visible>!String.IsEmpty(Control.GetLabel(3000))</visible>
                    </control>
                    <!-- Details Row -->
                    <control type="grouplist">
                        <orientation>horizontal</orientation>
                        <usecontrolcoords>true</usecontrolcoords>
                        <height>40</height>
                        <itemgap>15</itemgap>

                        <!-- Aired Date -->
                        <control type="label">
                            <posy>2</posy>
                            <width>auto</width>
                            <height>40</height>
                            <aligny>center</aligny>
                            <font>reg24</font>
                            <textcolor>white</textcolor>
                            <label>$INFO[Control.GetLabel(3004)]</label>
                            <visible>!String.IsEmpty(Control.GetLabel(3004))</visible>
                        </control>

                        <!-- MPAA -->
                        <control type="group" id="3098">
                            <visible>!String.IsEmpty(Control.GetLabel(30981))</visible>
                            <width>90</width>
                            <height>36</height>
                            <control type="image">
                                <height>100%</height>
                                <width>100%</width>
                                <texture colordiffuse="$INFO[Skin.String(NetflixDetailsFlagColor)]">netflix/frame/square-rounded.png</texture>
                            </control>
                            <control type="label" id="30981">
                                <height>100%</height>
                                <width>100%</width>
                                <font>Reg24</font>
                                <textcolor>white</textcolor>
                                <align>center</align>
                                <aligny>center</aligny>
                                <scroll>false</scroll>
                                <label>$INFO[VideoPlayer.MPAA]</label>
                            </control>
                        </control>

                        <!-- Resolution -->
                        <control type="group">
                            <visible>!String.IsEmpty(Control.GetLabel(3099))</visible>
                            <width>65</width>
                            <height>40</height>
                            <control type="image">
                                <height>100%</height>
                                <width>100%</width>
                                <texture colordiffuse="$INFO[Skin.String(NetflixDetailsFlagColor)]">netflix/frame/frame.png</texture>
                            </control>
                            <control type="label" id="3099">
                                <width>100%</width>
                                <height>100%</height>
                                <aligny>center</aligny>
                                <align>center</align>
                                <textcolor>white</textcolor>
                                <font>Reg24</font>
                                <scroll>false</scroll>
                                <label>$VAR[NextUpResolution]</label>
                            </control>
                        </control>
                    </control>
                    <!-- Plot -->
                    <control type="textbox">
                        <width>auto</width>
                        <height max="100">auto</height>
                        <align>justify</align>
                        <textcolor>white</textcolor>
                        <label>$INFO[Control.GetLabel(3001)]</label>
                    </control>
                </control>
            </control>

    </controls>
</window>